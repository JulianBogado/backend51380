<div class="text-center">
  <h1>Productos</h1>
</div>
<div>
  <button type="button" class="btn btn-primary">
  Carrito <span class="badge text-bg-secondary" id="badgeCarrito"></span>
</button>
</div>
<div class="container text-center">
  <div class="row justify-content-center">
    {{#each products}}
      <div class="col-4">
        <div class="card">
          <img
            src="{{imagen}}"
            class="card-img-top"
            alt="Imagen del producto"
          />
          <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.category}}</p>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text">Precio: ${{this.price}}</p>
            <p class="card-text">Stock: {{this.stock}}</p>
            <a href="#" class="btn btn-primary" onclick="addToCart('{{this._id}}')">Agregar al carrito</a>
          </div>
        </div>
      </div>
    {{/each}}
    {{#if pagination.hasPrevPage}}
      <p>⬅
        <a
          href="/products?page={{pagination.prevPage}}"
        >{{pagination.prevPage}}</a></p>
    {{/if}}
    <a>{{pagination.page}}</a>
    {{#if pagination.hasNextPage}}
      <p>
        <a
          href="/products?page={{pagination.nextPage}}"
        >{{pagination.nextPage}}</a>
        ➡
      </p>
    {{/if}}
  </div>
  <script src="cart.js"></script>
</div>